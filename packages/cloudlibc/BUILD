def build(ctx):
    root = ctx.extract()
    root.run(['./build'])

    root.run(['DESTDIR=stage', 'PREFIX=/', './install'])
    root.path('stage').install()

package(
    name='cloudlibc',
    version='0.11',
    homepage='https://github.com/NuxiNL/cloudlibc',
    maintainer='info@nuxi.nl',
    build_cmd=build,
)

distfile(
    name='cloudlibc-0.11.tar.xz',
    checksum='d36d929112150c6f3ad84e7e7b86f5ab493de38c01791cb43748380c5055cf78',
    master_sites={'https://nuxi.nl/distfiles/cloudlibc/'},
)
