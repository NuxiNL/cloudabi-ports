def build(ctx):
    root = ctx.extract()
    root.run(['./build'])

    root.run(['DESTDIR=stage', 'PREFIX=/', './install'])
    root.path('stage').install()

package(
    name='cloudlibc',
    version='0.16',
    homepage='https://github.com/NuxiNL/cloudlibc',
    maintainer='info@nuxi.nl',
    build_cmd=build,
)

distfile(
    name='cloudlibc-0.16.tar.xz',
    checksum='20d335d4051063ab47f37c7252ff502094b61a2a967096cfb9b1fb18efe1146c',
    master_sites={'https://nuxi.nl/distfiles/cloudlibc/'},
)
