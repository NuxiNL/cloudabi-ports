def build(ctx):
    root = ctx.extract()
    root.run(['./build'])

    root.run(['DESTDIR=stage', 'PREFIX=/', './install'])
    root.path('stage').install()

package(
    name='cloudlibc',
    version='0.19',
    homepage='https://github.com/NuxiNL/cloudlibc',
    maintainer='info@nuxi.nl',
    build_cmd=build,
)

distfile(
    name='cloudlibc-0.19.tar.xz',
    checksum='143eec2a569073a7ee09db3751e5399936b62f96d5d9e5f435983d14106b0787',
    master_sites={'https://nuxi.nl/distfiles/cloudlibc/'},
)
