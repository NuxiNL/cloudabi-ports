def build(ctx):
    root = ctx.extract()
    root.run(['./build'])

    root.run(['DESTDIR=stage', 'PREFIX=/', './install'])
    root.path('stage').install()

package(
    name='cloudlibc',
    version='0.10',
    homepage='https://github.com/NuxiNL/cloudlibc',
    maintainer='info@nuxi.nl',
    build_cmd=build,
)

distfile(
    name='cloudlibc-0.10.tar.xz',
    checksum='09ba4941b34e578568e362122ca714117e7c7a02873cd7ab1d0944b914b31fbc',
    master_sites={'https://nuxi.nl/distfiles/cloudlibc/'},
)
