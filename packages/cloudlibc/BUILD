def build(ctx):
    root = ctx.extract()
    root.run(['./build'])

    root.run(['DESTDIR=stage', 'PREFIX=/', './install'])
    root.path('stage').install()

package(
    name='cloudlibc',
    version='0.12',
    homepage='https://github.com/NuxiNL/cloudlibc',
    maintainer='info@nuxi.nl',
    build_cmd=build,
)

distfile(
    name='cloudlibc-0.12.tar.xz',
    checksum='962e4def0e63e3c00209a825f796b8ef5dc0ccecedb232352b41eb91cb7bd1fa',
    master_sites={'https://nuxi.nl/distfiles/cloudlibc/'},
)
