def build(ctx):
    root = ctx.extract()
    root.run(['./build'])

    root.run(['DESTDIR=stage', 'PREFIX=/', './install'])
    root.path('stage').install()

package(
    name='cloudlibc',
    version='0.7',
    homepage='https://github.com/NuxiNL/cloudlibc',
    maintainer='info@nuxi.nl',
    build_cmd=build,
)

distfile(
    name='cloudlibc-0.7.tar.xz',
    checksum='d3464b3b7bac498ec4839ce937fcc943682131b6f86a2dae01780fc287ef4df0',
    master_sites={'https://nuxi.nl/distfiles/cloudlibc/'},
)
