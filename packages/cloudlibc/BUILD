def build(ctx):
    root = ctx.extract()
    root.run(['./build'])

    root.run(['DESTDIR=stage', 'PREFIX=/', './install'])
    root.path('stage').install()

package(
    name='cloudlibc',
    version='0.13',
    homepage='https://github.com/NuxiNL/cloudlibc',
    maintainer='info@nuxi.nl',
    build_cmd=build,
)

distfile(
    name='cloudlibc-0.13.tar.xz',
    checksum='9312b62ccae354f508738c6c0c46c7f604005687a99f689f875c241b1c37ec94',
    master_sites={'https://nuxi.nl/distfiles/cloudlibc/'},
)
