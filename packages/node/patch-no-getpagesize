 intptr_t OS::CommitPageSize() {
+#if V8_OS_CLOUDABI
+  static intptr_t page_size = sysconf(_SC_PAGESIZE);
+#else
   static intptr_t page_size = getpagesize();
+#endif
   return page_size;
